<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/thumbnail"
        android:layout_width="100dip"
        android:layout_height="100dip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_margin="5dp"
        android:contentDescription="@null"
        android:src="@drawable/garage_sale_001" />

    <TextView
        android:id="@+id/caption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="5dp"
        android:layout_toRightOf="@+id/thumbnail"
        android:text="Caption Heading"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/caption"
        android:layout_margin="5dp"
        android:layout_toRightOf="@+id/thumbnail"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Pellentesque dignissim urna ut mauris iaculis facilisis. Praesent ut iaculis diam, eget iaculis dolor. Morbi non mollis enim. Donec faucibus gravida libero eget tempus. "
        android:textAppearance="?android:attr/textAppearanceSmall" />

</RelativeLayout>